    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "extends": ["prettier"],
  "plugins": ["prettier", "@typescript-eslint"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
